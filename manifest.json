{
    "manifest_version": 3,
    "name": "BombParty",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icon.png"
    },
    "commands": {
        "ouvrir_menu_extension_party": {
            "suggested_key": {
                "default": "Ctrl+V"
            },
            "description": "Ouvrir le menu de mon extension"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}